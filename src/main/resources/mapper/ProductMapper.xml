<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.joo.abysshop.mapper.mybatis.ProductMapper">
  <select id="findAllProduct" parameterType="com.joo.abysshop.enums.ProductType"
    resultType="java.util.List">
    SELECT *
    FROM products_table
    WHERE product_type = #{productType}
  </select>

  <select id="findById" parameterType="java.lang.Long"
    resultType="com.joo.abysshop.entity.product.ProductEntity">
    SELECT *
    FROM products_table
    WHERE product_id = #{id}
  </select>

  <select id="findProductIdByProductName" parameterType="java.lang.String" resultType="java.lang.Long">
    SELECT product_id
    FROM products_table
    WHERE product_name = #{productName}
  </select>
</mapper>

